{
  "id": "project_1",
  "name": "Hidden Words",
  "properties": {},
  "elements": [
    {
      "id": "app_1",
      "name": "Hidden Words",
      "properties": {
        "maxWidth": 500,
        "fonts": "Chelsea Market"
      },
      "elements": [
        {
          "id": "page_1",
          "name": "Main Page",
          "properties": {
            "styles": {
              "gap": "4px"
            }
          },
          "elements": [
            {
              "id": "data_3",
              "name": "Word",
              "properties": {},
              "kind": "Data"
            },
            {
              "id": "data_8",
              "name": "Columns",
              "properties": {
                "initialValue": {
                  "expr": "[]"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_9",
              "name": "Column Offsets",
              "properties": {
                "initialValue": {
                  "expr": "[]"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_10",
              "name": "Fixed Columns",
              "properties": {
                "initialValue": {
                  "expr": "[]"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_1",
              "name": "Status",
              "properties": {
                "initialValue": {
                  "expr": "'Ready'"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_2",
              "name": "Score",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_7",
              "name": "Round Skipped",
              "properties": {
                "initialValue": {
                  "expr": "false"
                }
              },
              "kind": "Data"
            },
            {
              "id": "calculation_28",
              "name": "Column Indexes",
              "properties": {
                "calculation": {
                  "expr": "Range(0, Len(Word) -1)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_25",
              "name": "All Letters",
              "properties": {
                "calculation": {
                  "expr": "Split('abcdefghijklmnopqrstuvwxyz')"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_26",
              "name": "Candidate Words",
              "properties": {
                "calculation": {
                  "expr": "Select(WordList(), And(Len($item) >= 5, Len($item) <= 7))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_15",
              "name": "Letters",
              "properties": {
                "calculation": {
                  "expr": "Split(Word)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_24",
              "name": "Num Rows",
              "properties": {
                "calculation": {
                  "expr": "4"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "function_18",
              "name": "Column Letter",
              "properties": {
                "input1": "rowIndex",
                "calculation": {
                  "expr": "let column = ItemAt(Columns, colIndex)\nlet rowOffset = ItemAt(ColumnOffsets, colIndex)\nlet row = (rowIndex + rowOffset) % NumRows\nItemAt(column, row)"
                },
                "input2": "colIndex"
              },
              "kind": "Function"
            },
            {
              "id": "function_14",
              "name": "Letter Row",
              "properties": {
                "input1": "rowIndex",
                "calculation": {
                  "expr": "ForEach(Columns, ColumnLetter(rowIndex, $index))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "calculation_27",
              "name": "Letter Rows",
              "properties": {
                "calculation": {
                  "expr": "ForEach(Range(0, NumRows - 1), LetterRow($item))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_14",
              "name": "Is Round Won",
              "properties": {
                "calculation": {
                  "expr": "And(GameRunning, Not(RoundSkipped), Eq(Join(First(LetterRows)), Word))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_20",
              "name": "Is Round Failed",
              "properties": {
                "calculation": {
                  "expr": "false"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_8",
              "name": "When Round Complete",
              "properties": {
                "calculation": {
                  "expr": "IsRoundComplete"
                },
                "whenTrueAction": {
                  "expr": "EndRound()"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_23",
              "name": "Is Round Complete",
              "properties": {
                "calculation": {
                  "expr": "Or(IsRoundWon, IsRoundFailed, RoundSkipped, Not(GameRunning))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_12",
              "name": "Round In Play",
              "properties": {
                "calculation": {
                  "expr": "Not(IsRoundComplete)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_9",
              "name": "Game Running",
              "properties": {
                "calculation": {
                  "expr": "Or(Status == 'Playing', Status == 'Paused')"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_29",
              "name": "When Game Ending",
              "properties": {
                "calculation": {
                  "expr": "Status == 'Ending'"
                },
                "whenTrueAction": {
                  "expr": "WrapGame()"
                }
              },
              "kind": "Calculation"
            },
            {
              "id": "timer_1",
              "name": "Game Timer",
              "properties": {
                "period": 30,
                "interval": 1,
                "show": false,
                "endAction": {
                  "expr": "EndGame()"
                }
              },
              "kind": "Timer"
            },
            {
              "id": "function_5",
              "name": "Points",
              "properties": {
                "calculation": {
                  "expr": "let lettersGuessed = Len(Word) - Len(FixedColumns)\nlettersGuessed * 3\n"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_15",
              "name": "Rotate Up",
              "properties": {
                "input1": "column",
                "calculation": {
                  "expr": "let offset = ItemAt(ColumnOffsets, column)\nlet newOffset = (offset + 1) % NumRows\nUpdate(ColumnOffsets, {[column]: newOffset})"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_16",
              "name": "Rotate Down",
              "properties": {
                "input1": "column",
                "calculation": {
                  "expr": "let offset = ItemAt(ColumnOffsets, column)\nlet newOffset = If(offset > 0, offset - 1, NumRows - 1)\nUpdate(ColumnOffsets, {[column]: newOffset})"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_17",
              "name": "Give Clue",
              "properties": {
                "calculation": {
                  "expr": "let unfixedCols = WithoutItems(ColumnIndexes, FixedColumns)\nlet newFixedCol = RandomFrom(unfixedCols)\nSet(FixedColumns, FlatList(FixedColumns, newFixedCol))\nUpdate(ColumnOffsets, {[newFixedCol]: 0})"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_13",
              "name": "Column Letters",
              "properties": {
                "input1": "correctLetter",
                "calculation": {
                  "expr": "FlatList(correctLetter, Shuffle(RandomListFrom(WithoutItems(AllLetters, correctLetter), NumRows - 1)))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_19",
              "name": "Row Html",
              "properties": {
                "input1": "letters",
                "calculation": {
                  "expr": "let letterItems = ForEach(letters, If(useHtml && ListContains(FixedColumns, $index), `<span style='color: green'>${$item}</span>`, $item))\nJoin(letterItems)"
                },
                "input2": "useHtml"
              },
              "kind": "Function"
            },
            {
              "id": "function_12",
              "name": "Setup New Round",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "let word = RandomFrom(CandidateWords)\nlet letters = Split(word)\nlet cols = ForEach(letters, ColumnLetters($item))\nlet firstOffset = 0\nSet(Word, word)\nSet(Columns, cols)\nSet(ColumnOffsets, ForEach(letters, Random(NumRows)))\nReset(FixedColumns)\n"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_6",
              "name": "Start New Game",
              "properties": {
                "calculation": {
                  "expr": "Reset(Score)\nReset(GameTimer)\nSet(Status, 'Playing')\nStartNewRound()\nGameTimer.Start()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_7",
              "name": "Start New Round",
              "properties": {
                "calculation": {
                  "expr": "Reset(RoundSkipped)\nSetupNewRound()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_8",
              "name": "End Round",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "If(IsRoundWon, Set(Score, Score + Points()))\nSet(ColumnOffsets, ForEach(Columns, 0))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_9",
              "name": "End Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Ending')"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_21",
              "name": "Wrap Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "SendScore(Score)\nSet(Status, 'Ended')"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_10",
              "name": "Pause Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Paused')\nGameTimer.Stop()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_11",
              "name": "Continue Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Playing')\nGameTimer.Start()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_20",
              "name": "Send Score",
              "properties": {
                "input1": "score",
                "action": true,
                "calculation": {
                  "expr": "Log('Sending score', score)\nSendMessage('parent', Record('score', score, 'url', CurrentUrl().text))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "text_18",
              "name": "Title",
              "properties": {
                "content": "Hidden Words",
                "styles": {
                  "fontFamily": "Chelsea Market",
                  "fontSize": "28",
                  "color": "#039a03"
                }
              },
              "kind": "Text"
            },
            {
              "id": "dialog_1",
              "name": "Instructions",
              "properties": {
                "initiallyOpen": false,
                "layout": "vertical",
                "showCloseButton": true,
                "styles": {
                  "padding": "2em"
                }
              },
              "elements": [
                {
                  "id": "text_3",
                  "name": "Instructions Text",
                  "properties": {
                    "content": "You have to find a word hidden in a grid of letters.\n\n\nClick the arrow buttons to move the letters around each column so that the word appears in the top row. \n\n<b>Note</b> - there will often be other words you can make from the random letters in the grid, but there is just one that will get you the points.\n\n\nTo make it easier, you can click Give Me A Clue to fix some of the letters in the word, but you will earn fewer points.  Or click Skip Word to move on if you're stuck.\n\n\nClick Next Word after each word to get another one.\n\n\n<b>Tips</b>\n<ul>\n  <li>Words may be plural</li>\n  <li>Longer words score more points</li>\n</ul>\n\nYou have 3 minutes to find as many words as you can.",
                    "allowHtml": true
                  },
                  "kind": "Text"
                },
                {
                  "id": "button_2",
                  "name": "Start Game 2",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()\nInstructions.Close()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "content": "Start Game",
                    "appearance": "filled"
                  },
                  "kind": "Button"
                }
              ],
              "kind": "Dialog"
            },
            {
              "id": "block_8",
              "name": "Stats Layout",
              "properties": {
                "layout": "horizontal wrapped",
                "styles": {
                  "fontSize": "24"
                }
              },
              "elements": [
                {
                  "id": "text_4",
                  "name": "Score Display",
                  "properties": {
                    "content": {
                      "expr": "Score + \" points\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "blue",
                      "marginRight": "100"
                    },
                    "show": {
                      "expr": "Or(GameRunning, Status == 'Ended')"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_5",
                  "name": "Time Display",
                  "properties": {
                    "content": {
                      "expr": "Ceiling(GameTimer. remainingTime) + \"s left\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "green"
                    },
                    "show": {
                      "expr": "GameRunning"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_6",
                  "name": "Game Over",
                  "properties": {
                    "content": "Game Over",
                    "styles": {
                      "fontSize": "inherit",
                      "color": "white",
                      "backgroundColor": "green",
                      "padding": "0 0.5em",
                      "borderRadius": "8px"
                    },
                    "show": {
                      "expr": "Status == 'Ended'"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_9",
              "name": "Ready Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Ready'"
                },
                "styles": {
                  "padding": "0"
                }
              },
              "elements": [
                {
                  "id": "text_7",
                  "name": "Title",
                  "properties": {
                    "content": "Welcome!",
                    "styles": {
                      "color": "#039a03",
                      "fontFamily": "Chelsea Market",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_8",
                  "name": "Ready Text",
                  "properties": {
                    "content": "Find words hidden in a grid of letters\n\nClick Instructions for full details\n\nOr Start Game to dive straight in!",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_7",
              "name": "Play Panel",
              "properties": {
                "layout": "vertical",
                "show": {
                  "expr": "Or(Status == 'Playing', Status == 'Ended')"
                },
                "styles": {
                  "width": "100%",
                  "padding": "0",
                  "position": "relative"
                }
              },
              "elements": [
                {
                  "id": "block_24",
                  "name": "Letter Grid",
                  "properties": {},
                  "elements": [
                    {
                      "id": "itemset_1",
                      "name": "Grid Items",
                      "properties": {
                        "items": {
                          "expr": "LetterRows"
                        },
                        "selectable": "none"
                      },
                      "elements": [
                        {
                          "id": "text_24",
                          "name": "Row Text",
                          "properties": {
                            "content": {
                              "expr": "RowHtml($item, $index == 0)"
                            },
                            "styles": {
                              "fontSize": "40",
                              "lineHeight": "0.9em",
                              "letterSpacing": "0.4em",
                              "fontFamily": "monospace",
                              "outlineOffset": "5px",
                              "borderRadius": "5px",
                              "outlineWidth": "2px",
                              "outlineStyle": {
                                "expr": "If($index == 0, 'solid', '')"
                              },
                              "outlineColor": "orange"
                            },
                            "allowHtml": true
                          },
                          "kind": "Text"
                        }
                      ],
                      "kind": "ItemSet"
                    },
                    {
                      "id": "block_25",
                      "name": "Up Rotators",
                      "properties": {
                        "layout": "horizontal",
                        "styles": {
                          "gap": "0"
                        }
                      },
                      "elements": [
                        {
                          "id": "itemset_2",
                          "name": "Item Set 2",
                          "properties": {
                            "items": {
                              "expr": "ColumnIndexes"
                            }
                          },
                          "elements": [
                            {
                              "id": "icon_1",
                              "name": "Up",
                              "properties": {
                                "iconName": {
                                  "expr": "'expand_less' "
                                },
                                "action": {
                                  "expr": "RotateUp($item)"
                                },
                                "styles": {
                                  "padding": "0",
                                  "fontSize": "38",
                                  "color": "black",
                                  "border": "1px solid gray"
                                },
                                "show": {
                                  "expr": "And(RoundInPlay, Not(ListContains(FixedColumns, $index)))"
                                }
                              },
                              "kind": "Icon"
                            },
                            {
                              "id": "icon_3",
                              "name": "Fixed",
                              "properties": {
                                "iconName": "check",
                                "styles": {
                                  "padding": "0",
                                  "fontSize": "38",
                                  "color": "green"
                                },
                                "show": {
                                  "expr": "And(RoundInPlay, ListContains(FixedColumns, $index))"
                                }
                              },
                              "kind": "Icon"
                            }
                          ],
                          "kind": "ItemSet"
                        }
                      ],
                      "kind": "Block"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "text_25",
                  "name": "Round In Play Text",
                  "properties": {
                    "content": {
                      "expr": "Points() + ' points for this word'"
                    },
                    "show": {
                      "expr": "RoundInPlay"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_21",
                  "name": "Round Won",
                  "properties": {
                    "content": {
                      "expr": "'Correct! ' + Points() + ' points added'"
                    },
                    "show": {
                      "expr": "IsRoundWon"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_22",
                  "name": "Round Failed",
                  "properties": {
                    "content": {
                      "expr": "'Sorry - no points' "
                    },
                    "show": {
                      "expr": "IsRoundFailed"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_23",
                  "name": "Round Skipped",
                  "properties": {
                    "content": "Skipped",
                    "show": {
                      "expr": "RoundSkipped"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "block_12",
                  "name": "Ended Panel",
                  "properties": {
                    "show": {
                      "expr": "Status == 'Ended'"
                    },
                    "styles": {
                      "position": "absolute",
                      "top": "140",
                      "left": "150",
                      "translate": "-50% -50%",
                      "backgroundColor": "lightblue",
                      "borderRadius": "10",
                      "border": "2px solid blue",
                      "minWidth": "18em",
                      "padding": "1em"
                    }
                  },
                  "elements": [
                    {
                      "id": "text_13",
                      "name": "Title",
                      "properties": {
                        "content": "Congratulations!",
                        "styles": {
                          "fontFamily": "Chelsea Market",
                          "fontSize": "28",
                          "color": "#039a03"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_14",
                      "name": "Score",
                      "properties": {
                        "content": {
                          "expr": "'You have scored ' + Score + ' points!'"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_15",
                      "name": "What next",
                      "properties": {
                        "content": "Click Start Game to play again"
                      },
                      "kind": "Text"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_19",
                  "name": "Round Controls",
                  "properties": {
                    "layout": "horizontal"
                  },
                  "elements": [
                    {
                      "id": "button_12",
                      "name": "Give Me A Clue",
                      "properties": {
                        "action": {
                          "expr": "GiveClue()"
                        },
                        "show": {
                          "expr": "Not(IsRoundComplete)"
                        },
                        "enabled": {
                          "expr": "Len(FixedColumns) < Len(Word) - 2"
                        }
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_9",
                      "name": "New Round",
                      "properties": {
                        "action": {
                          "expr": "StartNewRound()"
                        },
                        "show": {
                          "expr": "Status == 'Playing' && IsRoundComplete"
                        },
                        "content": "Next word",
                        "appearance": "filled"
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_10",
                      "name": "Skip Round",
                      "properties": {
                        "action": {
                          "expr": "Set(RoundSkipped, true)"
                        },
                        "show": {
                          "expr": "Status == 'Playing' && Not(IsRoundComplete)"
                        },
                        "content": "Skip Word"
                      },
                      "kind": "Button"
                    }
                  ],
                  "kind": "Block"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_10",
              "name": "Pause Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Paused'"
                },
                "styles": {
                  "padding": "0"
                }
              },
              "elements": [
                {
                  "id": "text_9",
                  "name": "Title",
                  "properties": {
                    "content": "Paused...",
                    "styles": {
                      "color": "#7529df",
                      "fontFamily": "Luckiest Guy",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_10",
                  "name": "Pause Text",
                  "properties": {
                    "content": "Click Continue Game to carry on",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_13",
              "name": "Game Controls",
              "properties": {
                "layout": "horizontal",
                "styles": {
                  "paddingTop": "20px",
                  "marginTop": "4px"
                }
              },
              "elements": [
                {
                  "id": "button_4",
                  "name": "Start Game",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "appearance": "filled"
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_5",
                  "name": "Stop Game",
                  "properties": {
                    "action": {
                      "expr": "GameTimer.Stop()\nEndGame()"
                    },
                    "show": {
                      "expr": "GameRunning"
                    },
                    "content": "Stop"
                  },
                  "kind": "Button"
                },
                {
